{
   "name": "phantom-techode",
   "version": "1.0.0",
   "description": "(backend) Application that allows simulating bus movements and enabling passengers to track their locations & movements.",
   "main": "index.js",
   "scripts": {
      "start": "cross-env NODE_ENV=production ENVIRONMENT=production npm run migrate && cross-env NODE_ENV=production ENVIRONMENT=production  babel-node app.js",
      "dev": "cross-env NODE_ENV=development ENVIRONMENT=development nodemon --exec npm run compile",
      "compile": "babel-node app.js",
      "lint": "eslint --ext .js",
      "test": "cross-env NODE_ENV=test ENVIRONMENT=test npm run migrate:undo && cross-env NODE_ENV=test ENVIRONMENT=test npm run migrate && cross-env NODE_ENV=test ENVIRONMENT=test npm run seedAll && c8 --check-coverage  mocha test/*.test.js --timeout 10000 --require @babel/register --ignore ./models/index.js --exit",
      "coverage": "c8 --check-coverage -r lcov npm test",
      "migrate": "npx sequelize db:migrate",
      "seedAll": "npx sequelize db:seed:all",
      "migrate:undo": "npx sequelize db:migrate:undo:all",
      "undoseed": "npx sequelize db:seed:undo:all",
      "create:model": "npx sequelize model:generate --name ",
      "create:seed": "npx sequelize seed:generate --name ",
      "migration:generate": "npx sequelize migration:generate --name "
   },
   "keywords": [
      "mocha",
      "chai"
   ],
   "repository": {
      "type": "git",
      "url": "git+https://github.com/atlp-rwanda/phatom-be-techode.git"
   },
   "author": "Techode",
   "license": "ISC",
   "bugs": {
      "url": "https://github.com/atlp-rwanda/phatom-be-techode/issues"
   },
   "homepage": "https://github.com/atlp-rwanda/phatom-be-techode#readme",
   "dependencies": {
      "@babel/cli": "^7.16.8",
      "@babel/core": "^7.16.7",
      "@babel/node": "^7.16.8",
      "@babel/plugin-proposal-class-properties": "^7.16.7",
      "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
      "@babel/preset-env": "^7.16.11",
      "bcryptjs": "^2.4.3",
      "body-parser": "^1.18.3",
      "c8": "^7.11.0",
      "cookie-parser": "^1.4.6",
      "cors": "^2.8.5",
      "cross-env": "^7.0.3",
      "dotenv": "^6.2.0",
      "express": "^4.17.3",
      "i18next": "^21.6.14",
      "i18next-fs-backend": "^1.1.4",
      "i18next-http-middleware": "^3.2.0",
      "joi": "^17.6.0",
      "jsonwebtoken": "^8.4.0",
      "morgan": "^1.9.1",
      "pg": "^8.7.3",
      "pg-hstore": "^2.3.4",
      "reflect-metadata": "^0.1.13",
      "sequelize": "^6.16.2",
      "sequelize-cli": "^6.4.1",
      "swagger-jsdoc": "^6.1.0",
      "swagger-ui-express": "^4.3.0"
   },
   "devDependencies": {
      "@types/node": "^16.11.10",
      "chai": "^4.3.6",
      "chai-http": "^4.3.0",
      "cross-env": "^7.0.3",
      "eslint": "^8.12.0",
      "eslint-config-prettier": "^8.5.0",
      "faker": "^6.6.6",
      "mocha": "^9.2.2",
      "nodemon": "^2.0.15",
      "prettier": "^2.6.1",
      "sinon": "^13.0.1",
      "typeorm-cli": "^1.0.7",
      "typescript": "4.5.2"
   }
}